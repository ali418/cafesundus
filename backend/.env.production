# Environment Variables for Backend Production

# Node Environment
NODE_ENV=production

# Server Configuration
# Railway will provide PORT automatically, fallback to 3000
PORT=${PORT:-3000}
API_PREFIX=/api/v1

# Database Configuration - Railway will provide DATABASE_URL
# These are fallbacks for local testing
DB_HOST=postgres
DB_PORT=5432
DB_NAME=grocery_management
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration - Use strong secrets in production
JWT_SECRET=cafe_sundus_super_secret_jwt_key_2024_production_v1
JWT_EXPIRES_IN=12h
JWT_REFRESH_SECRET=cafe_sundus_super_secret_refresh_key_2024_production_v1
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration - Allow Railway domain and common patterns
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
