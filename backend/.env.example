# Environment Variables for Backend

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
API_PREFIX=/api/v1

# Database Configuration
# You can use either DATABASE_URL or individual connection parameters
DATABASE_URL=postgres://postgres:postgres@localhost:5432/cafe_sundus

# Individual connection parameters (used as fallback if DATABASE_URL is not provided)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cafe_sundus
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3004

# Logging Configuration
LOG_LEVEL=debug

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true